---
import "../styles/global.css";
import { Font } from "astro:assets";
import { ClientRouter } from 'astro:transitions';
import LoadingIndicator from "astro-loading-indicator/component"

const { title, description } = Astro.props;

const defaultTitle = "Cosmic Rayn";
const defaultDescription = "Cosmic Rayn: An Interactive Cosmic Ray Experience";
---

<!doctype html>
<html lang="en">
	<head>
		<meta charset="UTF-8" />
		<meta name="viewport" content="width=device-width" />
		<link rel="icon" type="image/svg+xml" href="/favicon.svg" />
		<meta name="generator" content={Astro.generator} />
		<title>{title ?? defaultTitle}</title>
		<meta name="description" content={description ?? defaultDescription} />

		<meta property="og:url" content="https://nikola.fluidinterfaces.com/" />
		<meta property="og:type" content="website" />
		<meta property="og:title" content={defaultTitle} />
		<meta property="og:description" content={defaultDescription} />
		<meta property="og:image" content="/social-image.jpg" />

		<!-- Twitter Meta Tags -->
		<meta name="twitter:card" content="summary_large_image" />
		<meta property="twitter:domain" content="nikola.fluidinterfaces.com" />
		<meta property="twitter:url" content="https://nikola.fluidinterfaces.com/" />
		<meta name="twitter:title" content={defaultTitle} />
		<meta name="twitter:description" content={defaultDescription} />
		<meta name="twitter:image" content="/social-image.jpg" />

		<Font cssVariable="--font-geist" preload />
		<ClientRouter />
		<LoadingIndicator color="#f4f4f5" height="2px" />

	</head>
	<body class="font-sans min-h-screen bg-zinc-900">

		<slot />

		<!-- Client-side helper: mark links with data-href matching location.pathname -->
		<script>
		if (typeof window !== 'undefined') {
			document.addEventListener('DOMContentLoaded', function () {
				try {
					const path = location.pathname || '/';
					for (const el of document.querySelectorAll('[data-href]')) {
						if (el.getAttribute('data-href') === path) {
							el.classList.remove('text-zinc-500');
							el.classList.add('text-zinc-100');
						}
					}
				} catch (e) {
					/* ignore */
				}
			});

			// Auto-fix relative paths for images and videos based on page depth.
			// This runs on initial load, on SPA navigations, and when new nodes are
			// added so assets resolve correctly regardless of the current URL.
			(function () {
				function fixRelativeAssets() {
					try {
						const pathname = window.location.pathname;
						const segments = pathname.split('/').filter(s => s.length > 0);
						const pathDepth = segments.length > 2 ? segments.length - 2 : 0;
						const pathPrefix = pathDepth === 0 ? './' : '../'.repeat(pathDepth);

						// Fix img src attributes that are relative (don't start with / or http)
						for (const img of document.querySelectorAll('img')) {
							const src = img.getAttribute('src');
							if (src && !src.startsWith('/') && !src.startsWith('http')) {
								const cleanPath = src.startsWith('./') ? src.slice(2) : src;
								img.setAttribute('src', pathPrefix + cleanPath);
							}
						}

						// Fix <source> elements (video/audio)
						for (const source of document.querySelectorAll('source')) {
							const src = source.getAttribute('src');
							if (src && !src.startsWith('/') && !src.startsWith('http')) {
								const cleanPath = src.startsWith('./') ? src.slice(2) : src;
								source.setAttribute('src', pathPrefix + cleanPath);
							}
						}

						// Fix video[src] attributes
						for (const video of document.querySelectorAll('video[src]')) {
							const src = video.getAttribute('src');
							if (src && !src.startsWith('/') && !src.startsWith('http')) {
								const cleanPath = src.startsWith('./') ? src.slice(2) : src;
								video.setAttribute('src', pathPrefix + cleanPath);
							}
						}
					} catch (e) {
						/* ignore */
					}
				}

				// Run on initial DOMContentLoaded
				document.addEventListener('DOMContentLoaded', fixRelativeAssets);

				// Run when Astro client router signals a page load (works for SPA nav)
				document.addEventListener('astro:page-load', fixRelativeAssets);

				// Also run on history navigation (back/forward)
				window.addEventListener('popstate', fixRelativeAssets);

				// MutationObserver to catch dynamically-inserted nodes (client navigation)
				const mo = new MutationObserver((mutations) => {
					for (const m of mutations) {
						if (m.addedNodes && m.addedNodes.length) {
							fixRelativeAssets();
							break;
						}
					}
				});
				mo.observe(document.documentElement || document.body, { childList: true, subtree: true });
			})();
		}
		</script>
	</body>
</html>

<style>
	html,
	body {
		margin: 0;
		width: 100%;
		height: 100%;
	}
</style>
