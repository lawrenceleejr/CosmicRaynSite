---
import H1 from "../components/h1.astro";
import Link from "../components/link.astro";
import Navigation from "../components/navigation";
import RootLayout from "../layouts/RootLayout.astro";
import WarpBackground from "../components/warp-background";
import AvailableForWork from "../components/available.astro";
---

<RootLayout>
	<main>

		<video   id="bg-video" autoplay muted loop playsinline>
		<!-- <source src="/earth.mp4" type="video/mp4" /> -->
		<source src="./Travel_Wide.mp4" type="video/mp4" />
		</video>

		<script>
		document.addEventListener('astro:page-load', () => {
			// Find all videos and reload them
			const videos = document.querySelectorAll('video');
			videos.forEach(video => {
			// Only reload if it's not already playing
			if (video.paused && video.autoplay) {
				video.load();
				video.play().catch(() => {
				// Autoplay might be blocked, that's okay
				});
			}
			});
		});
		</script>

		
		<div id="overlay"></div>

		<div class="group relative w-full min-h-dvh flex items-center justify-center">
			<div class="absolute w-full h-dvh -z-10"> -->
			</div>

			<div class="p-4 sm:p-8 absolute w-full h-dvh flex flex-col justify-between z-10">
				<div>
					<!-- <H1 size="large"> Cosmic <br /> Rayn </H1> -->
					 <img 
					src="/cosmicrayn.png" 
					alt="Logo" 
					class="fixed top-0 left-0 max-w-[25%] z-20 pointer-events-none"
					/>
				</div>

				<div>
					<div class="mb-2 sm:mb-4 flex items-center justify-between">
						<div class="flex items-center gap-4">
							<Link href="./about">About the project</Link>
							<Link href="./gallery" variant="secondary">Gallery</Link>
						</div>

						<Navigation client:load>
							<!-- <Link href="/blog" variant="secondary">Blog</Link> -->
							<!-- <Link href="/contributors" variant="secondary">Contributors</Link> -->
							<!-- <Link href="/contact" variant="secondary">Contact</Link> -->

							<!-- <Link href="/about" openNewTab={false} variant="secondary">About</Link> -->
							<!-- <Link href="/gallery" openNewTab={false} variant="secondary">Gallery</Link> -->
							<Link href="./build" openNewTab={false} variant="secondary">Process</Link>
							<Link href="./contributors" openNewTab={false} variant="secondary">Contributors</Link>
							<Link href="./acknowledgements" openNewTab={false} variant="secondary">Acknowledgements</Link>
						</Navigation>
						
					</div>
				</div>
			</div>
		</div>
